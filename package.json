{
  "name": "prometheus-echonet-lite",
  "displayName": "Prometheus Echonet-Lite",
  "version": "0.0.1",
  "description": "Prometheus exporter for Echonet-Lite devices",
  "author": "Vaughan Whitteron",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vwhitteron/prometheus-echonet-lite.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "test": "mocha -r ts-node/register test/*.test.ts",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "dev": "npx ts-node src/index.ts"
  },
  "dependencies": {
    "express": "^4.16.1",
    "dotenv": "^16.0.0",
    "node-echonet-lite": "^0.6.0",
    "prom-client": "^14.0.0",
    "lodash": "^4.17.0"
  },
  "keywords": [
    "monitoring",
    "prometheus"
  ],
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  }
}